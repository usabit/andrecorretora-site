footer.site-footer {
    background-color #e0963f
    color white
    .wrapper {
        display flex
        padding 20px 0
        +below('tablet'){
            flex-direction column
            align-items center
        }
    }
    
    a {
        color white
    }
    
    .info-contato {
        display flex
        align-items center

        +below('tablet'){
            flex-direction column
            align-items center
            margin-bottom 20px
        }   

        li {
            display flex
            align-items center
            margin-right 20px
            
            +below('tablet'){
                margin 10px 0
            }
            
            i.fa {
                size(35px)
                display flex
                padding 5px
                border-radius 50%
                align-items center
                justify-content center
                border 2px solid white
                margin-right 10px
                &.fa-home {
                    font-size 25px
                }
                &.fa-envelope {
                    font-size 18px
                    &:before{ 
                        margin-left -1px
                    }
                }
                &.fa-phone {
                    font-size 22px
                    &:before{
                        margin-top 1px
                    }
                }
            }
            
        }
    }
}