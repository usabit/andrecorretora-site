.lista-sobre {
    overflow hidden
    
    .lista-sobre-item {
        col(1/4, $cycle: 4)
        
        +below(1000px){
            col(1/2, cycle: 2)
        }
        
        display flex
        align-items center
        flex-direction column
        
        .text-wrap {
            h3 {
                color alpha(blue, .9)
                text-align center
                border-bottom 1px solid alpha(blue, .9)
                padding-bottom 10px
                text-transform uppercase
                font-weight 500
            }
            p {
                font-size 1.2rem
                text-align center
                line-height 1.3
                color alpha(black, .7)
            }
        }
    }

}