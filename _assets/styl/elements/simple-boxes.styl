.simple-box-container {
    overflow hidden
    display flex
    flex-wrap wrap
    // align-items center
    justify-content center
    
    .simple-box {
        margin 10px
        width calc((100% / 2) - 20px)
        display flex
        align-items center
        padding 25px
        box-shadow 2px 2px 10px alpha(black, .2)
        background-color alpha(black, .08)
        
        +below('tablet'){
            width 90%
        }
        
        .image-wrap {
            width 155px
            max-width 40%
            flex-stretch 0
            background-image linear-gradient(35deg, #d58c36 49%, #e0963f 50%)
            border-radius 50%
            margin 10px
            position relative
            overflow hidden
            &:after {
                content ''
                display block
                padding-bottom 100%
            }
            
            img {
                max-width 100%
                position absolute
            }
        }
        
        .text-wrap {
            flex 1
            flex-stretch 0
            padding 10px
            display flex
            flex-direction column
            
            h3 {
                font-weight 700
                font-size 2rem
            }
            
            a {
                align-self center
            }
        }
    }
}