.faq-display {
    display flex
    
    +below(600px){
        flex-direction column
    }
    
    .faq-section {
        background-color alpha(black, .2)
        flex 1
        margin 0 10px
        display flex
        flex-direction column
        align-items center
        +below(600px){
            margin 10px 0
        }
        
        &:first-child {
            margin-left 0
        }
        &:last-child {
            margin-right 0
        }
        
        img {
            margin 20px
            max-width 90%
        }
        
        .text-wrap {
            align-self stretch
            color white
            padding 0 20px
            
            p.faq-description {
                font-size 1.1rem
                line-height 1.3
            }
        }
        
        &:hover {
            opacity initial
        }
    }
}