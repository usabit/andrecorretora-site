.noticia-display {
    margin 0 20px
    color #173c46
    position relative

    .image-wrap {
        align-self stretch
        position relative
        display flex
        background-position center center
        background-size cover
        background-color alpha(orange, .3)
        &:after {
            padding-bottom 45%
            content ''
        }        
    }
    
    .text-wrap {
        padding-right 160px
        
        .noticia-title {
            color orange
            font-weight 600
        }
        
        .noticia-description {
            line-height 1.3
            font-size 1.166667rem
        }
    }    
}

.noticia-share-box {
    position absolute
    bottom 20px
    right 20px
    width 125px
    background-color white
    box-shadow 2px 2px 5px alpha(black, .3)
    text-align center
    
    .calendario {
        color orange
        display flex
        flex-direction column
        align-items center
        line-height 1
        
        .dia {
            font-size 70px
            font-weight 700
        }
        
        .mes {
            font-size 14px
            font-weight 400
            text-transform uppercase
            position relative
            &:after {
                content ''
                display block
                height 1px
                width 100%
                position absolute
                bottom -5px
                left 0
                background-color orange
            }
        }
    }
    
    .cta-share {
        font-size 16px
    }

    .social-links {
        display flex
        align-items center
        justify-content center
        
        li {
            margin 0 3px
        }
    }
}
