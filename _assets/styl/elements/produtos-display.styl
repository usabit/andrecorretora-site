.produtos-display-container {
    background-color orange
    background-image url(/assets/img/textura_geometrica.png);
    background-size cover
    background-position center center
}

.produto-display {
    border 2px solid white
    text-align center
    display flex
    align-items center
    flex-direction column
    
    .text-wrap {
        color white
        h3 {
            font-weight 500
            font-size 1.5rem
        }
        p {
            font-size 1.1rem
        }
    }
    
    .image-wrap {
        align-self stretch
        position relative
        display flex
        background-size cover
        background-position center center
        &:after {
            padding-bottom 33%
            content ''
        }        
    }
}