.geometric-background {
    background-color orange
    background-image url(../img/textura_geometrica.png);
    background-size cover
    background-position center center
    
    .geometric-background-header-container {
        text-align center
    }
    
    h1 {
        color white
        font-size 3.5rem
    }
    
    .dark-box {
        background-color alpha(black, .25)
        padding 10px
        color white
        
        .text-wrap {
            display flex
            flex-direction column
            
            label {
                display flex
                flex-direction column

                span {
                    margin-bottom 10px
                    display inline-block
                }
                
                input {
                    padding 5px 7px
                    font-size 1.2rem
                }
                
                textarea {
                    padding 5px 7px
                    font-size 1.2rem
                    resize none
                    height 100%
                }
            }
        }
    }
    
    .noticia-destaque {
        display flex
        align-items flex-start
        
        +below(800px){
            flex-direction column
        }
        
        .image-wrap {
            flex 1
            margin-right 15px
            background-color alpha(white, .4)
            position relative
            background-position center center
            background-repeat no-repeat
            background-size cover
            &:after {
                content ''
                padding-bottom 66.445%
                display block
            }
            .noticia-share-box {
                box-shadow none
                bottom 0
                right 0
            }
            
            +below(800px){
                margin-right 0
                margin-bottom 15px
                width 100%
            }
        }
        .text-wrap {
            flex 1
            .title {
                color white
                font-weight 400
                padding-bottom 7px
                border-bottom 1px solid white
            }
            .brief {
                font-size 1.2rem
                line-height 1.5
            }
        }
    }
}
