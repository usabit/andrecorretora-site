html, body {
  font-family Roboto
  font-size 12px
}

.baskerville {
  font-family: 'Libre Baskerville', serif;
}

p {
  margin 20px 0
}

// Headers
h1 {
  font-size 2.375rem
  font-weight 300
  
  +below('tablet'){
    font-size 2rem
  }
}

h2 {
  font-size 1.875rem
  font-weight 300
  
  +below('tablet'){
    font-size 1.5rem
  }
}

h3 {
  font-size 1.375rem
  font-weight 300
  +below('tablet'){
    font-size 1.1rem
  }
}
.section-header-container {
  display flex
  justify-content center

  .section-header {
    margin 0 auto
    font-size 2rem
    font-weight 500
    text-transform uppercase
    border-bottom 1px solid black
    color orange
    border-bottom-color @color

    &.white {
      color white
      border-bottom-color @color
    }
  }
}

.underlined-header {
    margin 0 auto
    font-size 2rem
    font-weight 500
    text-transform uppercase
    border-bottom 1px solid black
    color orange
    border-bottom-color @color
    display inline-block

    &.white {
      color white
      border-bottom-color @color
    }
}


// *********************** //
.light {
  font-weight 300
}

.center {
  text-align center
}

.fm {
  font-size 1.375rem
}

.accent-foreground {
  color azulUsabit !important
}

.accent-background {
  background-color azulUsabit !important
  color white !important
}